.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{href: "#"}
          = link_to user_path(@proto.user) do
            %img.media-object{alt: "64x64", data: { holder: {rendered: true}}, data: { src: "holder.js/64x64"}, src: "#{@proto.user.image}", style: "width: 64px; height: 64px;"}
        .media-body
          %h4#top-aligned-media.media-heading
            = @proto.title
          .proto-user
            = link_to "by #{@proto.user.name}", user_path(@proto.user)
            %span.degree
              = @proto.user.works
    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag(@proto.images.main.first.content, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @proto.images.sub.each do |sub_image|
          %li.list-group-item
            = image_tag(sub_image.content, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p= @proto.catch_copy
    .col-md-6
      %h4 Concept
      %p= @proto.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num= @proto.comments.length
    .col-md-8
      - @proto.comments.each do |comment|
        .media
          .media-left
            = link_to user_path(comment.user) do
              %img.media-object{alt: "64x64", data: { holder: { rendered: true }}, data: { src: "holder.js/64x64"}, src: "#{comment.user.image}", style: "width: 64px; height: 64px;"}
          .media-body
            %h4#top-aligned-media.media-heading
              = comment.user.name
              %a.anchorjs-link{href: "#top-aligned-media"}
                %span.anchorjs-icon
            %p= comment.text
