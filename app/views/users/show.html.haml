.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@user) do
          %img.media-object{alt: "64x64", data: { holder: { rendered: true}}, data: { src: "holder.js/64x64"}, src: "#{@user.image}", style: "width: 64px; height: 64px;"}
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @user.prototypes.length
            %i Projects
        .proto-user
          %span.degree= @user.group
        .row
          .col-md-6
            %h4 Profile
            %p= @user.profile
          .col-md-6
            %h4 Works
            %p= @user.works
.container.proto-list
  .row
    - @user.prototypes.each do |proto|
      = render partial: 'layouts/prototype', locals: { proto: proto}
.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label": "Previous", href: "#"}
        %span{"aria-hidden": "true"} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} 5
    %li
      %a{"aria-label": "Next", href: "#"}
        %span{"aria-hidden": "true"} »
